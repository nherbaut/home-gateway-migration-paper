digraph graphname {
 
 
 rankdir=LR;
 #layout=neato;
overlap=false;
splines=true;
pack=true;
start="random";
sep=0.1;

 
  
  start [label = "Deploy SvNF \non the Gateway", shape="oval",  style="filled",fillcolor="black",fontcolor="white"];
